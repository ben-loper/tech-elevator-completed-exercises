
@{
    ViewData["Title"] = "FizzBuzz";
}

@model int;
    


<h2>FizzBuzz</h2>

<!-- Example navigation for part 2 of exercise. -->
<nav>
    <ul>
        <li><a asp-controller="Home" asp-action="FizzBuzz" asp-route-number=20>20</a></li>
        <li><a asp-controller="Home" asp-action="FizzBuzz" asp-route-number=50>50</a></li>
        <li><a asp-controller="Home" asp-action="FizzBuzz" asp-route-number=100>100</a></li>
    </ul>
</nav>

<ul>    
    @for(int i = 1; i <= Model; i++)
    {
        if(i % 5 == 0 && i % 3 == 0)
        {
            <li style="color:#228b22; font-size: 28px">FizzBuzz!</li>
        }
        else if(i % 3 == 0)
        {
            <li style="color:blue">Fizz!</li>
        }
        else if(i % 5 == 0)
        {
            <li style="color:red">Buzz!</li>
        }
        else
        {
            <li>@i</li>
        }
    }
</ul>
